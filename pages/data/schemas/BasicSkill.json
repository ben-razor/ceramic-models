{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "BasicSkill",

    "properties": {
        "name": {
            "type": "string",
            "maxLength": 160
        },
        "id": {
            "type": "string",
            "maxLength": 420
        },
        "description": {
            "type": "string",
            "maxLength": 420
        },
        "issuer": {
            "type": "string",
            "maxLength": 160
        },
        "issuedDate": {
            "type": "string",
            "format": "date-time"
        },
        "expiresDate": {
            "type": "string",
            "format": "date-time"
        },
        "proof": {
        "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "maxLength": 160
                },
                "verificationMethod": {
                    "type": "string",
                    "maxLength": 420
                },
                "sig": {
                    "type": "string",
                    "maxLength": 420
                }
            }
        }
    },
    "required": ["name", "id"]
}
  